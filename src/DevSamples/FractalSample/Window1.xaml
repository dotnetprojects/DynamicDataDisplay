<Window x:Class="FractalSample.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
    Title="WPF DynamicDataDisplay - Fractal Sample" WindowState="Maximized">
    <Grid>
		<d3:ChartPlotter Name="plotter" Visible="-180,-90,360,180" DockPanel.Dock="Top" MinHeight="700">
			<d3:Map Name="map" DrawDebugBounds="False">
				<d3:MandelbrotServer/>
			</d3:Map>
			<d3:CursorCoordinateGraph/>
			<d3:AxisCursorGraph/>
		</d3:ChartPlotter>
	</Grid>
</Window>
