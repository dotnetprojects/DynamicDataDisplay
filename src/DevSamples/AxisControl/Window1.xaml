<Window x:Class="AxisControlSample.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:c="http://research.microsoft.com/DynamicDataDisplay/1.0"
    Title="Window1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Content="Button" Grid.Row="1" Grid.Column="1"/>

        <c:NumericAxisControl Name="leftAxis" Background="Yellow" Grid.Row="1" Grid.Column="0" 
													Placement="Left" FontFamily="Georgia"/>
        <c:NumericAxisControl Name="bottomAxis" Background="YellowGreen" Grid.Row="2" Grid.Column="1" 
													Placement="Bottom" FontFamily="Georgia"/>
        <c:NumericAxisControl Name="rightAxis" Background="Salmon" Grid.Row="1" Grid.Column="2" 
													Placement="Right" FontFamily="Georgia"/>
        <c:NumericAxisControl Name="topAxis" Background="Peru" Grid.Row="0" Grid.Column="1" 
													Placement="Top" FontFamily="Georgia"/>
    </Grid>
</Window>
