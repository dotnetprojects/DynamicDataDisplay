<Window x:Class="AxisControlSample.IntegerAxisWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
	Title="WPF DynamicDataDisplay — Integer Axis Sample" 
	WindowState="Maximized" Icon="D3-icon.ico">
	<Grid>
		<d3:ChartPlotter Name="plotter">
			<d3:ChartPlotter.MainHorizontalAxis>
				<d3:HorizontalIntegerAxis Name="axis"/>
			</d3:ChartPlotter.MainHorizontalAxis>
            
            <d3:CursorCoordinateGraph ShowVerticalLine="False" ShowHorizontalLine="False"/>
		</d3:ChartPlotter>
	</Grid>
</Window>
