<Page x:Class="Microsoft.Research.DynamicDataDisplay.Samples.Demos.v02.TooltipSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
    Title="TooltipSample">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Button Content="Show/Hide markers" Click="Button_Click" Grid.Row="0"
						Width="110" Height="30" HorizontalAlignment="Left"/>

		<d3:ChartPlotter Name="plotter" Grid.Row="1">
		</d3:ChartPlotter>
	</Grid>
</Page>
